<feature
      id="org.eclipse.elk.graphviz.feature"
      label="Eclipse Layout Kernel (Incubation) - Graphviz Library Support"
      version="0.8.0.qualifier"
      provider-name="Eclipse Layout Kernel"
      plugin="org.eclipse.elk.core">

   <description url="http://www.eclipse.org/elk">
      The Eclipse Layout Kernel provides automatic layout to diagram
editors and viewers. This feature adds support for using the
layout algorithms provided by the Graphviz library of algorithms.
The library has to be installed separately. Download from:
http://www.graphviz.org/
   </description>

   <copyright>
      Copyright (c) 2008 Kiel University and others.

This program and the accompanying materials are made available under the
terms of the Eclipse Public License 2.0 which is available at
http://www.eclipse.org/legal/epl-2.0.

SPDX-License-Identifier: EPL-2.0
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <requires>
      <import plugin="org.eclipse.xtext" version="2.0.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.xtext.util"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.emf.common"/>
      <import plugin="org.antlr.runtime"/>
      <import plugin="org.eclipse.core.runtime" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.ecore" version="2.5.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.elk.feature" version="0.7.0.qualifier"/>
   </requires>

   <plugin
         id="org.eclipse.elk.alg.graphviz.dot"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.eclipse.elk.alg.graphviz.layouter"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
